<% if @linkedin.share.present? || @linkedin.post_time.present? %>
$("#myModal_<%= @linkedin.id %>").find('.modal-header').prepend("<div class='alert alert-error error-message'><%= @linkedin.errors.full_messages.join(", ") %></div>")
  //$('.table').append('<tr><td> <%= link_to "#{@linkedin.share.truncate(100)}", linkedin_path(@linkedin) %></td><td><%= @linkedin.post_time.to_formatted_s(:long) %></td></tr>')
<% else %>
    $("#myModal_<%= @linkedin.id %>").modal('hide');
<% end %>