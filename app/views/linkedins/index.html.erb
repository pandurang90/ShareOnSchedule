<a data-toggle="modal" href="#myModal" class="compose-new-share btn">Compose New Post To Share</a>
<div class="modal hide fade in" id="myModal">
  <%=render "form" %>
</div>
<% content_for :sidebar do %>
  <% if @linkedins.size > 0 %>
    <ul class="nav nav-list">
      <li class="nav-header">Recent Posts</li>
        <% @linkedins.each_with_index do |item| %>
      <li>
    <%= link_to "- #{item.share.truncate(100)}", linkedin_path(item) if item.id? %>
      </li>
      <% end %>    
    </ul>
  <% end %>
<% end %>