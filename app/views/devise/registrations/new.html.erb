
  <div class="signup">
<h2 class="block-head">Sign up</h2>
<hr>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html=>{:class=>"form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group">
    <label class="control-label" for="inputFname">Email*</label>
    <div class="controls">
      <%= f.email_field :email %>  
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputFname">Username*</label>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputFname">Password*</label>
    <div class="controls">
	   <%= f.password_field :password %>
   </div>
 </div>

  <div class="control-group">
    <label class="control-label" for="inputFname">Password Confirmation*</label>
    <div class="controls">
	    <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign up" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
<% end %>
</div>

