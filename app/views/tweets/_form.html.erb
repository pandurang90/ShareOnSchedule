

<%= form_for(:tweet, :html => { :class => 'form-horizontal new-tweet-form' },:remote => true ) do |f| %> 
  <div class="modal-header">  
    New Tweet
    <a class="close" data-dismiss="modal">Ã—</a>  
  </div> 
  <div class="modal-body">  
    <div class="control-group">
      <%= f.label :content, "*Compose new tweet:", :class => "control-label"%>
      <div class="controls">
        <%= f.text_area :content, :placeholder => 'Compose new tweet....', 
        :class => "input-xlarge", :rows => 6 %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tweet_time, "Set Time :", :class => "control-label" %>
      <div class="controls input-prepend">
        <span class="add-on"><i class="icon-time"></i></span>
        <%= f.text_field :tweet_time, :placeholder => 'Select Time to tweet', 
        :class => "input-xlarge", :id => "date-time" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">  
  <%= f.submit "Tweet", class:'btn btn-success submit-btn' %> 
  <a href="#" class="btn" data-dismiss="modal">Close</a>  
  </div>  
<% end %>


