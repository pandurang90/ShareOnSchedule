<%= form_for post, :html => { :class => 'form-horizontal new-tweet-form' },:remote => true do |f| %> 
  <div class="modal-header">  
    New Post
    <a class="close" data-dismiss="modal">Ã—</a>  
  </div> 
  <div class="modal-body">  
    <div class="control-group">
      <%= f.label :content, "*Compose new post:", :class => "control-label"%>
      <div class="controls">
        <%= f.text_area :content, :placeholder => 'Compose new post....', 
        :class => "input-xlarge", :rows => 6 %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :post_time, "Set Time :", :class => "control-label" %>
      <div class="controls input-prepend">
        <span class="add-on"><i class="icon-time"></i></span>
        <%= f.text_field :post_time, :placeholder => 'Select Time to share', 
        :class => "input-xlarge", :id => "date-timet" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputadmin">Select where to post:</label>

      <div class="controls">
        <%if has_twitter?%><%=check_box_tag 'twitter' %>&nbsp;Twitter &nbsp;<%end%>
        <%if has_facebook?%><%=check_box_tag 'facebook' %>&nbsp;Facebook &nbsp;<%end%>
        <%if has_linkedin?%><%=check_box_tag 'linked' %>&nbsp;Linkedin<%end%>
      </div>
    </div>
  </div>
  <div class="modal-footer">  
  <%= f.submit "Post", class:'btn btn-success submit-btn' %> 
  <a href="#" class="btn" data-dismiss="modal">Close</a>  
  </div>  
<% end %>